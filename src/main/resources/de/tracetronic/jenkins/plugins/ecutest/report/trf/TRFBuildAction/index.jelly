<?jelly escape-by-default='true'?>
<j:jelly xmlns:j="jelly:core" xmlns:st="jelly:stapler" xmlns:d="jelly:define" xmlns:l="/lib/layout" xmlns:t="/lib/hudson" xmlns:f="/lib/form">
    <j:set var="owner" value="${it.getOwner(request)}" />
    <j:set var="build" value="${it.getBuild(request)}" />
    <l:layout title="${it.displayName}" norefresh="true">
        <st:include page="sidepanel.jelly" it="${it.getOwner(request)}" />
        <l:main-panel>
            <h1>
                <img src="${resURL}${it.iconFileName}" alt="TRF reports" height="48" width="48" />
                ${it.displayName}
            </h1>
            <j:if test="${owner != null}">
                <j:if test="${owner != build}">
                    <div>
                        ${%build.on} <a href="${rootURL}/${build.url}">${build.fullDisplayName}</a>
                    </div>
                </j:if>
                <table class="fileList">
                    <j:forEach var="report" items="${it.getTRFReports()}">
                        <tr>
                            <td>
                                <img src="${resURL}${it.iconFileName}" alt="TRF report" height="16" width="16" />
                                <st:nbsp />
                            </td>
                            <td>
                                <j:if test="${owner == build}">
                                    <a href="${report.url}">${h.escape(report.fileName)}</a>
                                </j:if>
                                <j:if test="${owner != build}">
                                    <a href="${rootURL}/${build.url}${it.urlName}/${report.id}">${h.escape(report.fileName)}</a>
                                </j:if>
                            </td>
                            <td class="fileSize">
                                ${h.humanReadableByteSize(report.fileSize)}
                            </td>
                        </tr>
                    </j:forEach>
                </table>
            </j:if>
        </l:main-panel>
    </l:layout>
</j:jelly>
