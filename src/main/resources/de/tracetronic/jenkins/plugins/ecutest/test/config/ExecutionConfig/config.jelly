<?jelly escape-by-default='true'?>
<j:jelly xmlns:j="jelly:core" xmlns:f="/lib/form">
    <f:section title="${%executionSection.title}">
        <f:entry title="${%timeout.title}" description="${%timeout.description}" field="timeout">
            <f:textbox default="${descriptor.defaultTimeout}"/>
        </f:entry>
        <f:entry title="${%checkTestFile.title}" description="${%checkTestFile.description}" field="checkTestFile">
            <f:checkbox default="true"/>
        </f:entry>
        <f:entry title="${%recordWarnings.title}" description="${%recordWarnings.description}" field="recordWarnings">
            <f:checkbox/>
        </f:entry>
        <f:entry title="${%stopOnError.title}" description="${%stopOnError.description}" field="stopOnError">
            <f:checkbox default="true"/>
        </f:entry>
    </f:section>
</j:jelly>
